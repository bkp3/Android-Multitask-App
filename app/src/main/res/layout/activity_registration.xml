<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Account"
        android:textSize="30dp"
        android:textColor="@android:color/holo_red_dark"
        android:gravity="center"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/name_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:hint="Name"
        android:textSize="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textColorHint="@android:color/holo_orange_light" />
    <EditText
        android:id="@+id/fname_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_create"
        android:layout_marginTop="10dp"
        android:hint="Father name"
        android:textSize="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textColorHint="@android:color/holo_orange_light"/>
    <EditText
        android:id="@+id/age_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fname_create"
        android:layout_marginTop="10dp"
        android:hint="Age"
        android:inputType="number"
        android:textSize="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textColorHint="@android:color/holo_orange_light"/>
    <EditText
        android:id="@+id/phone_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/age_create"
        android:layout_marginTop="10dp"
        android:hint="Phone"
        android:inputType="number"
        android:textSize="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textColorHint="@android:color/holo_orange_light"/>
    <EditText
        android:id="@+id/email_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_create"
        android:layout_marginTop="10dp"
        android:hint="Email"
        android:textSize="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textColorHint="@android:color/holo_orange_light"/>
    <EditText
        android:id="@+id/password_create"
        android:inputType="numberPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_create"
        android:layout_marginTop="10dp"
        android:hint="Password (min. 6 number)"
        android:textSize="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textColorHint="@android:color/holo_orange_light"/>
    <EditText
        android:id="@+id/address_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_create"
        android:layout_marginTop="10dp"
        android:hint="Address"
        android:textSize="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textColorHint="@android:color/holo_orange_light"/>

    <Button
        android:id="@+id/account_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address_create"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Create Account"
        android:textAllCaps="false"
        android:background="@android:color/holo_blue_light"
        android:textSize="20dp"
        />



</RelativeLayout>